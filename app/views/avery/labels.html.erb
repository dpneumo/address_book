<div class="w-[800px] bg-gray-100 rounded border-black-4">
  <div class="grid grid-cols-3 gap-4">
    <% @people.each do |person| %>
      <div class="grid grid-rows-3 bg-blue-100">
        <div><%= person.addressee %></div>
        <div><%= person.street %></div>
        <div><%= person.city_state_zip %></div>
      </div>
    <% end %>
  </div>
</div>