<%= form_with(model: address) do |form| %>
  <% if address.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :street1, style: "display: block" %>
    <%= form.text_field :street1 %>
  </div>

  <div>
    <%= form.label :street2, style: "display: block" %>
    <%= form.text_field :street2 %>
  </div>

  <div>
    <%= form.label :city, style: "display: block" %>
    <%= form.text_field :city %>
  </div>

  <div>
    <%= form.label :state, style: "display: block" %>
    <%= form.text_field :state %>
  </div>

  <div>
    <%= form.label :zip, style: "display: block" %>
    <%= form.text_field :zip %>
  </div>

  <div>
    <%= form.label :preferred, style: "display: block" %>
    <% pref_opts = options_for_select([['Yes', true], ['No', false]], true) %>
    <%= form.select :preferred, pref_opts %>
  </div>

  <div>
    <%= form.label :person_id, style: "display: block" %>
    <%= form.select :person_id, Person.all.collect {|p| [p.fullname, p.id] } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
